<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Glow (Simulated with a larger oval) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/teal_glow" />
            <size android:width="160dp" android:height="160dp"/>
        </shape>
    </item>
    <!-- Inner Circle -->
    <item android:top="20dp" android:bottom="20dp" android:left="20dp" android:right="20dp">
        <shape android:shape="oval">
            <solid android:color="@color/neon_teal" />
            <size android:width="120dp" android:height="120dp"/>
        </shape>
    </item>
</layer-list>
