<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TapMute" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- New Mockup Primary Colors -->
        <item name="colorPrimary">@color/neon_teal</item>
        <item name="colorPrimaryDark">@color/bg_dark</item>
        <item name="colorAccent">@color/neon_teal</item>
        
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="android:statusBarColor">@color/bg_dark</item>
        <item name="android:navigationBarColor">@color/bg_dark</item>
        
        <!-- Custom Component Styles -->
        <item name="materialCardViewStyle">@style/Widget.App.Card</item>
    </style>

    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/card_bg</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>
